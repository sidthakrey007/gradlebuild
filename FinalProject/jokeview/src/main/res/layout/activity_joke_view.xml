<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/right_padding"
    android:paddingLeft="@dimen/left_padding"
    android:paddingRight="@dimen/right_padding"
    android:id="@+id/jokeviewcontainer"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jokeview.JokeViewActivity">

    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_centerHorizontal= "true"
        android:text= "@string/jokeview_heading"/>

    <TextView

        android:id ="@+id/jokeText"
        android:layout_below="@id/heading"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:layout_height = "wrap_content"
        android:layout_width = "wrap_content"
        />

</RelativeLayout>
